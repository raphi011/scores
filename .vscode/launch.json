{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceRoot}/cmd/api",
      "args": [
        "-provider",
        "mysql",
        "-connection",
        "root:test@tcp(localhost)/scores?charset=utf8mb4&parseTime=true"
      ],
      "showLog": true,
      "apiVersion": 2
    },
    {
      "name": "Frontend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeVersion": "10.7.0",
      "cwd": "${workspaceRoot}/web",
      "runtimeArgs": ["run-script", "debug"],
      "env": { "BACKEND_URL": "http://localhost:8080" },
      "port": 9229,
      "console": "integratedTerminal"
    }
  ]
}
