{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/web",
      "args": ["-db", "data/scores.db", "-goauth", "data/client_secret.json"],
      "showLog": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Backend Docker",
      "type": "go",
      "request": "launch",
      "mode": "remote",
      "remotePath": "/go/src/github.com/raphi011/scores/cmd/web",
      "port": 40000,
      "host": "localhost",
      "program": "${workspaceRoot}/cmd/web",
      "env": {},
      "args": []
    },
    {
      "name": "Next: Node",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/web",
      "runtimeArgs": ["run-script", "debug"],
      "port": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "Terminal",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/terminal",
      "showLog": true,
      "args": ["scrape"]
    }
  ]
}
