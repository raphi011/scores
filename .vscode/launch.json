{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/api",
      "args": [
        "-provider",
        "mysql",
        "-connection",
        "root:test@/scores?charset=utf8mb4&parseTime=true"
      ],
      "showLog": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Backend Docker",
      "type": "go",
      "request": "launch",
      "mode": "remote",
      "remotePath": "/go/src/github.com/raphi011/scores/cmd/api",
      "useApiV1": false,
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 1,
        "maxStringLen": 64,
        "maxArrayValues": 64,
        "maxStructFields": -1
      },
      "port": 40000,
      "host": "localhost",
      "program": "${workspaceRoot}/cmd/api",
      "env": {},
      "args": []
    },
    {
      "name": "Next: Node",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/web",
      "runtimeArgs": ["run-script", "debug"],
      "port": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "Terminal",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/terminal",
      "showLog": true,
      "args": ["scrape"]
    }
  ]
}
