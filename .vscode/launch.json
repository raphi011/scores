{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Both",
      "configurations": ["Frontend", "Backend"]
    }
  ],
  "configurations": [
    {
      "name": "Backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceRoot}/cmd/api",
      "env": {
        "CGO_ENABLED": 0,
        "GOOS": "linux"
      },
      "buildFlags": "-tags=portable",
      "args": [
        "-mode",
        "debug",
        "-provider",
        "postgres",
        "-connection",
        "postgres://postgres:test@localhost?sslmode=disable"
        // "-debuglevel",
        // "5",
        // "-provider",
        // "mysql",
        // "-connection",
        // "root@tcp(localhost)/scores?charset=utf8mb4&parseTime=true&multiStatements=true"
      ],
      "showLog": true,
      "apiVersion": 2
    }
  ]
}
